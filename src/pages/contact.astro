---
import Layout from '@layouts/Layout.astro'
import { getEntry } from 'astro:content'
import { getLocale } from 'astro-i18n-aut'
import ContactShowcase from '@components/contactShowcase.astro'

export function getStaticPaths() {
  return [{ params: { lang: 'en' } }, { params: { lang: 'sk' } }]
}

const locale = getLocale(Astro.url)
const contact = await getEntry('contact', locale + '/contact')
const contactDescription =
  locale === 'en'
    ? 'Contact Švehla a Blaško for CNC milling, turning, and machining inquiries in Slovakia.'
    : 'Kontaktujte Švehla a Blaško pre CNC frézovanie, sústruženie a strojárske zákazky na Slovensku.'

export const prerender = true
---

<Layout title={contact.data.layouttitle} description={contactDescription}>
  <ContactShowcase contact={contact} locale={locale} />
</Layout>
