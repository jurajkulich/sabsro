---
import { Image } from "astro:assets";
import heroImage from "assets/cavo.svg";
import { t } from "i18next";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Image
      src={heroImage}
      alt="Person using CNC machine"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div class="container">
    <h1
      class="text-3xl lg:text-4xl xl:text-4xl font-bold lg:tracking-tight xl:tracking-tighter">
      Švehla a Blaško s. r. o.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {t("home.subtitle")}
    </p>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {t("home.subtitle2")}
    </p>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {t("home.subtitle3")}
    </p>
  </div>
</main>
