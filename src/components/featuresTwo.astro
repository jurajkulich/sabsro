---
import { getCollection, getEntry } from 'astro:content'
import { getLocale } from 'astro-i18n-aut'

const locale = getLocale(Astro.url)
const features = await getEntry('features', locale + '/features')

// const features = await getCollection("features", ({ id }) => {
//   return id.startsWith(locale);
// });
---

<section class="bg-white dark:bg-gray-900 pb-4 md:pb-12">
  <div class="container py-10 mx-auto">
    <h1 class="text-2xl lg:text-4xl font-bold lg:tracking-tight">
      {features.data.title}
    </h1>

    <p class="text-lg mt-4 text-slate-600">
      {features.data.description}
    </p>

    <div
      class="grid grid-cols-1 gap-6 mt-8 xl:mt-12 xl:gap-16 md:grid-cols-2 xl:grid-cols-3">
      {
        features.data.features.map((item) => (
          <div class="space-y-0">
            <h2 class="text-lg font-semibold text-gray-800 dark:text-white">
              {item.title}
            </h2>
            <p class="text-slate-500 mt-0 leading-relaxed dark:text-gray-300">
              {item.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
