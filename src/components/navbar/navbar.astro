---
import Container from '@components/container.astro'
import { Astronav, MenuItems, MenuIcon } from 'astro-navbar'
import logo from '../../assets/logo.svg'
import { getLocale } from 'astro-i18n-aut'

const locale = getLocale(Astro.url)
const basePath = import.meta.env.BASE_URL.replace(/\/$/, '')
const defaultLocale = 'sk'
const localizedPath = (lang: string, slug = '') => {
  const normalizedSlug = slug ? `/${slug.replace(/^\/+|\/+$/g, '')}` : ''
  if (lang === defaultLocale) {
    return `${basePath}${normalizedSlug}` || '/'
  }
  return `${basePath}/${lang}${normalizedSlug}`
}

const localizedTitles = {
  en: {
    home: 'Home',
    about: 'About',
    machines: 'Machines',
    contact: 'Contact',
  },
  sk: {
    home: 'Domov',
    about: 'O nás',
    machines: 'Naše stroje',
    contact: 'Kontakt',
  },
}

// todo
const menuTitles = localizedTitles[locale] || localizedTitles.en

const menuitems = [
  {
    title: menuTitles.home,
    path: localizedPath(locale),
  },
  {
    title: menuTitles.about,
    path: localizedPath(locale, 'about'),
  },
  {
    title: menuTitles.machines,
    path: localizedPath(locale, 'machines'),
  },
  {
    title: menuTitles.contact,
    path: localizedPath(locale, 'contact'),
  },
]
---

<div class="sticky top-0 z-50">
  <div class="bg-[#f7f4ef]/95 backdrop-blur">
    <Container>
      <div class="flex items-center justify-between py-2 text-[11px] uppercase tracking-[0.2em] text-slate-500">
        <span>{locale === 'sk' ? 'Presné frézovanie od roku 1990' : 'Precision milling since 1990'}</span>
        <span class="hidden sm:inline">{locale === 'sk' ? 'Nové Mesto nad Váhom' : 'Nové Mesto nad Váhom'}</span>
      </div>
      <header class="border-t border-b border-slate-200/70">
        <Astronav>
          <div class="flex w-full items-center justify-between py-5">
            <a
              href={localizedPath(locale)}
              class="flex items-center gap-4 text-base font-semibold tracking-tight">
              <img src={logo.src} alt="Svehla a Blasko logo." class="w-[94px] sm:w-[110px]" />
            </a>
            <div class="flex items-center lg:hidden">
              <MenuIcon class="text-slate-800" />
            </div>
          </div>
          <MenuItems class="hidden w-full lg:flex lg:w-auto">
            <div class="w-full pb-4">
              <ul class="flex flex-col items-start gap-4 border-t border-slate-200/70 pt-4 lg:flex-row lg:items-center lg:gap-8 lg:border-t-0 lg:pt-0">
                {
                  menuitems.map((item) => (
                    <li>
                      <a
                        href={item.path}
                        class="group relative whitespace-nowrap text-sm font-semibold uppercase tracking-[0.14em] text-slate-600 transition hover:text-slate-900 lg:text-xs lg:tracking-[0.22em]">
                        {item.title}
                        <span class="absolute -bottom-3 left-0 h-[2px] w-0 bg-slate-900 transition-all duration-300 group-hover:w-full"></span>
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
          </MenuItems>
        </Astronav>
      </header>
    </Container>
  </div>
</div>
